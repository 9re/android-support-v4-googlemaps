<project name="android-support-v4-googlemaps" default="clean-build">
    <property name="src.dir" value="src" />
    <property name="build.dir" value="build" />
    <property name="jar.file" value="${build.dir}/jar/android-support-v4-r2-googlemaps.jar" />

    <path id="classpath">
      <fileset dir="lib">
        <include name="**/*.jar"/>
      </fileset>
    </path>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}/classes">
            <include name="java/**/*.java"/>
            <include name="honeycomb/**/*.java"/>
            <classpath refid="classpath"/>
        </javac>
    </target>

    <target name="jar">
        <mkdir dir="${build.dir}/jar"/>
        <jar destfile="${jar.file}" basedir="build/classes" />
    </target>

    <target name="clean-build" depends="clean,compile,jar" />
</project>
